<?xml version="1.0" encoding="UTF-8"?>

<!--
  NOTES
  1) Do not install this on anything > XP SP3 for now
  2) Will add IE9 when it is released
  3) If you want to preload some search providers then export SearchScopes from another machine and name it iesearch.reg
  4) We now support localized versions, but please only leave one version in %software%\ie8 as they will all be installed
  5) If you have more languages, please let us know
-->

<packages>

<package
  id="ie8"
  name="Internet Explorer 8"
  revision="10"
  reboot="false"
  priority="10">

  <check type="uninstall" condition="exists" path="Windows Internet Explorer 8" />

  <!-- Danish -->
  <install cmd='%COMSPEC% /c IF EXIST "%SOFTWARE%\IE8\IE8-WindowsXP-x86-DAN.exe" "%SOFTWARE%\IE8\IE8-WindowsXP-x86-DAN.exe" /passive /norestart /update-no'>
    <exit code="3010" reboot="postponed" />
  </install>
  <!-- German -->
  <install cmd='%COMSPEC% /c IF EXIST "%SOFTWARE%\IE8\IE8-WindowsXP-x86-DEU.exe" "%SOFTWARE%\IE8\IE8-WindowsXP-x86-DEU.exe" /passive /norestart /update-no'>
    <exit code="3010" reboot="postponed" />
  </install>
  <!-- English -->
  <install cmd='%COMSPEC% /c IF EXIST "%SOFTWARE%\IE8\IE8-WindowsXP-x86-ENU.exe" "%SOFTWARE%\IE8\IE8-WindowsXP-x86-ENU.exe" /passive /norestart /update-no'>
    <exit code="3010" reboot="postponed" />
  </install>
  <!-- French -->
  <install cmd='%COMSPEC% /c IF EXIST "%SOFTWARE%\IE8\IE8-WindowsXP-x86-FRA.exe" "%SOFTWARE%\IE8\IE8-WindowsXP-x86-FRA.exe" /passive /norestart /update-no'>
    <exit code="3010" reboot="postponed" />
  </install>
  <!-- Dutch -->
  <install cmd='%COMSPEC% /c IF EXIST "%SOFTWARE%\IE8\IE8-WindowsXP-x86-NLD.exe" "%SOFTWARE%\IE8\IE8-WindowsXP-x86-NLD.exe" /passive /norestart /update-no'>
    <exit code="3010" reboot="postponed" />
  </install>
  <install cmd='REG ADD "HKLM\SOFTWARE\Clients\StartMenuInternet\IEXPLORE.EXE\DefaultIcon" /ve /d "%PROGRAMFILES%\Internet Explorer\iexplore.exe" /f' />
  <install cmd='REG ADD "HKLM\SOFTWARE\Policies\Microsoft\Internet Explorer\Main" /v DisableFirstRunCustomize /t REG_DWORD /d 1 /f' />
  <install cmd='%COMSPEC% /c IF EXIST "%SOFTWARE%\IE8\iesearch.reg" regedit /s "%SOFTWARE%\IE8\iesearch.reg"' />

  <upgrade cmd='REG ADD "HKLM\SOFTWARE\Clients\StartMenuInternet\IEXPLORE.EXE\DefaultIcon" /ve /d "%PROGRAMFILES%\Internet Explorer\iexplore.exe" /f' />
  <upgrade cmd='REG ADD "HKLM\SOFTWARE\Policies\Microsoft\Internet Explorer\Main" /v DisableFirstRunCustomize /t REG_DWORD /d 1 /f' />
  <upgrade cmd='%COMSPEC% /c IF EXIST "%SOFTWARE%\IE8\iesearch.reg" regedit /s "%SOFTWARE%\IE8\iesearch.reg"' />

  <downgrade cmd='REG ADD "HKLM\SOFTWARE\Clients\StartMenuInternet\IEXPLORE.EXE\DefaultIcon" /ve /d "%PROGRAMFILES%\Internet Explorer\iexplore.exe" /f' />
  <downgrade cmd='REG ADD "HKLM\SOFTWARE\Policies\Microsoft\Internet Explorer\Main" /v DisableFirstRunCustomize /t REG_DWORD /d 1 /f' />
  <downgrade cmd='%COMSPEC% /c IF EXIST "%SOFTWARE%\IE8\iesearch.reg" regedit /s "%SOFTWARE%\IE8\iesearch.reg"' />

  <remove  cmd='"%WINDIR%\ie8\spuninst\spuninst.exe" %MSI%' />

</package>

</packages>
