  </downgrade>
  <downgrade cmd='%COMSPEC% /c del /F /Q "%PUBLIC%\Desktop\QuickTime Player.lnk"'>
    <exit code="1" />
  </downgrade>

  <remove  cmd='msiexec %MSI% /x "%SOFTWARE%\Apple\QuickTime\%version%\QuickTime.msi"' />
</package>

