<package
  id="hicadviewer2010"
  name="HiCAD Viewer 2010 Professional"
  revision="%version%-0"
  reboot="false"
  priority="10">

  <!-- Version number from setup.exe -->
  <variable name="version" value="6.5.0.0" />

  <!-- Bundled with vc2008 runtime -->
  <depends package-id="vcruntime" />

  <!-- Probably .NET 2, but that's undefined -->
